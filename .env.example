# Environment Variables Template
# Copy this file to .env and fill in your values

# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-azure-app.azurecontainerapps.io,your-custom-domain.com

# API Keys
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key-here

# Database (Optional - currently using SQLite)
# DB_NAME=weather_db
# DB_USER=weather_user
# DB_PASSWORD=your-db-password
# DB_HOST=your-db-host
# DB_PORT=5432

# Azure Configuration (for deployment scripts)
# AZURE_SUBSCRIPTION_ID=your-subscription-id
# AZURE_RESOURCE_GROUP=weather-rg
# AZURE_LOCATION=eastus
# AZURE_CONTAINER_REGISTRY=yourregistry
# AZURE_APP_NAME=weather-app

# Redis (Optional - for caching)
# REDIS_URL=redis://your-redis-host:6379/0

# Email (Optional - for Django admin)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True

# Logging (Optional)
# LOG_LEVEL=INFO
# SENTRY_DSN=your-sentry-dsn-here
